@model Danasura_Project.Models.msSiswa

@{
    ViewBag.Title = "LoginSiswa";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@*<div class="col-lg-6 d-none d-lg-block"
     style="background : url(https://source.unsplash.com/7tXqXcVcLDM);
            background-position : center;
            background-size : cover"></div>*@

<body class="" style="background : url(https://source.unsplash.com/7tXqXcVcLDM);
            background-position : center;
            background-size : cover">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <center>
                    <div class="card o-hidden border-0 shadow-lg my-5 col-lg-8">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div>
                                <center>
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Halo Tunas Bangsa !</h1>
                                        </div>
                                        <form class="user" method="post" action="@Url.Action("LoginSiswa", "Home")">
                                            @Html.AntiForgeryToken()

                                            <center>
                                                <hr />
                                                <h6>Pendidikan adalah senjata paling ampuh <br />yang bisa kamu gunakan untuk mengubah dunia.<br /><br />- Nelson Mandela -</h6>
                                                <hr />
                                                <div class="form-group">
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Masukkan username disini ..." } })
                                                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "password", @placeholder = "Masukkan password disini ..." } })
                                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Masuk" class="btn btn-primary btn-user btn-block" />
                                                </div>
                                            </center>
                                            <hr>
                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <p class="small">Belum punya akun ? <a style="color:royalblue" href="@Url.Action("Create", "msStaffs")">Klik disini</a></p>
                                        </div>
                                    </div>
                                </center>
                                
                            </div>
                        </div>
                    </div>
                </center>

            </div>

        </div>

    </div>

</body>