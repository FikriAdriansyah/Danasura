@model Danasura_Project.Models.msDonatur

@{
    ViewBag.Title = "LoginDonatur";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<body class="" style="background: url(https://source.unsplash.com/Q_Sei-TqSlc);
            background-position: center;
            background-size: cover">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <center>
                    <div class="card o-hidden border-0 shadow-lg my-5 col-lg-8">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div>
                                <center>
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Halo si Pembuat Kebaikan !</h1>
                                        </div>
                                        <form class="user" method="post" action="@Url.Action("LoginDonatur", "Home")">
                                            @Html.AntiForgeryToken()

                                            <center>
                                                <hr />
                                                <h6>Sebaik-baik manusia adalah yang paling bermanfaat bagi manusia<br /><br />- HR. Ahmad -</h6>
                                                <hr />
                                                <div class="form-group">
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Masukkan username disini ..." } })
                                                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "password", @placeholder = "Masukkan password disini ..." } })
                                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Masuk" class="btn btn-success btn-user btn-block" />
                                                </div>
                                            </center>
                                            <hr>
                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <p class="small">Belum punya akun ? <a style="color:royalblue" href="@Url.Action("Create", "msStaffs")">Klik disini</a></p>
                                        </div>
                                    </div>

                                </center>

                            </div>
                        </div>
                    </div>
                </center>

            </div>

        </div>

    </div>

</body>